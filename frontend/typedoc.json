{
  "entryPoints": ["src"],
  "entryPointStrategy": "expand",

  "tsconfig": "tsconfig.json",
  "out": "docs",

  "plugin": ["typedoc-plugin-markdown"],

  "exclude": [
    "/*.test.ts",
    "/.test.tsx",
    "**/.spec.ts",
    "/*.spec.tsx",
    "node_modules//",
    ".next/**/",
    "*/icon*",
    "*/inputs*",
    "*.ico",
    "*.css",
    "*/(app)*",
    ".env",
    "*readme*",
    "*README*",
    "*.md",
    "/assets*"
  ],

  "excludeExternals": true,
  "excludePrivate": true,
  "excludeProtected": false,
  "skipErrorChecking": true
}
